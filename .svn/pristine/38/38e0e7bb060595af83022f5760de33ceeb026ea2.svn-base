import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.Socket;
import java.util.Scanner;

import java.io.*;
import java.nio.file.Files;

public class ContentServer {

    public static void main(String[] args) throws Exception {

        Parser parser = new Parser();

        if (args.length != 2) {
            System.err.println("Pass the server IP and contetn file as command line arguments");
            return;
        }
        
        for(int i=0;i<3;i++) {
            try {
                var socket = new Socket(args[0], 59898);
                System.out.println("Reading lines. Ctrl+D or Ctrl+C to quit");

                var in = new Scanner(socket.getInputStream());
                var out = new PrintWriter(socket.getOutputStream(), true);
                out.println("PUT");
                out.println(parser.parse(args[1]));

                while (in.hasNextLine()) {

                    System.out.println(in.nextLine());
                }

            }
            catch (Exception e) {
                System.out.println(e);
            }

            Thread.sleep(10000);
        }

        System.out.println("The server is not responding!!");
    }
}